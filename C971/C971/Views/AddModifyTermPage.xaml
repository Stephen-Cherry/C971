<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.Views.AddModifyTermPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Margin="0,10,0,0">
            <Label Text="Term Title:" FontSize="Medium" />
            <Entry x:Name="TermTitle" Text="{Binding TermTitle}" Placeholder="Term Title" FontSize="Medium" />
            <Label Text="Start Date:" FontSize="Medium" />
            <DatePicker x:Name="StartDate" Date="{Binding TermStartDate}"  />
            <Label Text="End Date:" FontSize="Medium" />
            <DatePicker x:Name="EndDate" Date="{Binding TermEndDate}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>